		</resourceGroup>

		<resourceGroup name="SDL.UI.Controls.JQuery.TopBar">
			<files>
				<file name="TopBar.jQuery.js"/>
			</files>
			<dependencies>
				<dependency name="SDL.Client.Libraries.SDL.JQuery"/>
				<dependency name="SDL.UI.Core.Controls.JQuery"/>
				<dependency name="SDL.UI.Controls.TopBar"/>
			</dependencies>
		</resourceGroup>
	
		<resourceGroup name="SDL.UI.Controls.Application.TopBar">
			<files>
				<file name="Application/TopBar.js"/>
			</files>
			<dependencies>
				<dependency name="SDL.Client.Application"/>
				<dependency name="SDL.UI.Core.Renderers.ControlRenderer"/>
			</dependencies>
		</resourceGroup>
