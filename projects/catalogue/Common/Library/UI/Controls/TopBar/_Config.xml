<?xml version="1.0" encoding="utf-8" ?>
<configuration  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../SDL.Client.Core/configuration.xsd">

	<resourceGroups>
		<resourceGroup name="SDL.UI.Controls.TopBar">
			<files>
				<file name="TopBar.js"/>
				<file name="Resources/resources.default.resjson"/>
				<file name="Resources/resources.{CULTURE}.resjson"/>
				<file name="TopBar.css"/>
			</files>
			<dependencies>
				<dependency name="SDL.Client.Libraries.SDL.Globalize"/>
				<dependency name="SDL.UI.Core.Controls.ControlBase"/>
				<dependency name="SDL.UI.Core.Event.Constants"/>
				<dependency name="SDL.UI.Controls.JQuery.ResizeTrigger"/>
				<dependency name="SDL.UI.Controls.JQuery.ScrollView"/>
				<dependency name="SDL.UI.Controls.JQuery.Callout"/>
				<!--dependency name="SDL.UI.Controls.JQuery.Tooltip"/-->
