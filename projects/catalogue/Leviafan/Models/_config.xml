<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="../../Common/Library/Core/configuration.xsd">

    <resourceGroups>

        <resourceGroup name="LVF.Models.Store">
            <files>
                <file name="Store.js"/>
            </files>
            <dependencies>
                <dependency name="LVF.Models.Products"/>
                <dependency name="LVF.Models.Collections"/>
                <dependency name="SDL.Client.Models.Base.ListProvider"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.Factory">
            <files>
                <file name="Factory.js"/>
            </files>
            <dependencies>
                <dependency name="LVF.Models.ModelFactory"/>
                <dependency name="LVF.Models.Store"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.ModelFactory">
            <files>
                <file name="ModelFactory.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Models"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.Products">
            <dependencies>
                <dependency name="LVF.Models.Product"/>
                <dependency name="LVF.Models.ProductList"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.Collections">
            <dependencies>
                <dependency name="LVF.Models.Collection"/>
                <dependency name="LVF.Models.CollectionList"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.Product">
            <files>
                <file name="Product.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Models.Classes"/>
                <dependency name="SDL.Client.Models.Base.Item"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.ProductList">
            <files>
                <file name="ProductList.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Models.Base.List"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.CollectionList">
            <files>
                <file name="CollectionList.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Models.Base.List"/>
            </dependencies>
        </resourceGroup>

        <resourceGroup name="LVF.Models.Collection">
            <files>
                <file name="Collection.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Models.Classes"/>
            </dependencies>
        </resourceGroup>

    </resourceGroups>
</configuration>